@page "/"

<PageTitle>Q Athletics</PageTitle>
<head>
    <link href="~/css/w3School.css" rel="stylesheet" />
</head>

<!-- Section 1: Full-screen background with logo, heading, and button -->
<div class="section section-hero">
    <div class="logo">Logo</div>
    <div class="content">
        <h1 class="main-heading">Q ATHLETICS</h1>
        <p class="description">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla ac urna at lorem venenatis interdum.</p>
        <button class="btn" onclick="scrollToForm()">Sign In</button>
    </div>
</div>

<!-- Section 2: Full-screen sign-in form -->
<div class="section section-signin">
    <form class="signin-form">
        <h2 class="form-heading">Sign In</h2>
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" class="form-input" placeholder="Enter your email" required>

        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" class="form-input" placeholder="Enter your password" required>

        <button type="submit" class="btn">Submit</button>
    </form>
</div>